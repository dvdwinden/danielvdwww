---
permalink: /feed.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="en">
  <title>{{ metadata.title }} • All posts</title>
  <subtitle>{{ metadata.description }}</subtitle>
  <link href="{{ metadata.url }}/feed.xml" rel="self"/>
  <link href="{{ metadata.url }}/"/>
  <updated>{% set allPosts = collections.journal.concat(collections.links) %}{{ allPosts | getNewestCollectionItemDate | dateToRfc3339 }}</updated>
  <id>{{ metadata.url }}/</id>
  <author>
    <name>{{ metadata.author.name }}</name>
    <email>{{ metadata.author.email }}</email>
  </author>
  {%- set allPosts = collections.journal.concat(collections.links) | sort(false, false, 'date') | reverse %}
  {%- for post in allPosts.slice(0, 20) %}
  {%- set absolutePostUrl = post.url | absoluteUrl(metadata.url) %}
  <entry>
    <title>{{ post.data.title }}</title>
    <link href="{% if post.data.external_url %}{{ post.data.external_url | escape }}{% else %}{{ absolutePostUrl }}{% endif %}"/>
    <updated>{{ post.inputPath | gitDate | dateToRfc3339 }}</updated>
    <id>{{ absolutePostUrl }}</id>
    <content type="html">{{ post.templateContent | htmlToAbsoluteUrls(absolutePostUrl) }}{% if post.data.external_url %}&lt;p&gt;&lt;a href="{{ post.data.external_url | escape }}"&gt;Continue reading →&lt;/a&gt;&lt;/p&gt;{% endif %}</content>
  </entry>
  {%- endfor %}
</feed>
